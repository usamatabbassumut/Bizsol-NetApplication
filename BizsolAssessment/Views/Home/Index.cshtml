@{
    ViewData["Title"] = "Home Page";
}
<head>
    <style>
        .row{
            margin-top:20px;
        }
          .biz-table th {
            background-color: #e1e1e1 !important;
            color: #000 !important;
            border-bottom: 2px solid #e5e5e5 !important;
        }
    </style>
</head>


<div class="text-center">
    <h1 class="display-4">Bizsol Assessment</h1>
</div>


<div class="row" style="padding-top: 20px;" id="">
    <div class="col-lg-6">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-list"></i>&nbsp;&nbsp;View Users</h3>
            </div>
            <div class="card-body">

                <table id="myTable" class="table table-bordered table-hover table-striped table-responsive biz-table">
                    <thead>
                        <tr>
                            <th class="control"></th>
                            <th class="control">Id</th>
                            <th class="min-tablet">Name</th>
                            <th class="min-desktop"> Email</th>
                            <th class="min-desktop"> Phone</th>
                            <th class="min-desktop"> Address</th>
                            <th class="min-mobile">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>

            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-lg-12" style="text-align: right">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-pencil-alt"></i>&nbsp;&nbsp;Add / Update User</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <input type="hidden" id="hdnUserId" />
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="txtUserName">Username</label>
                            <input name="txtUserName" type="text" placeholder="Enter Username" class="form-control" id="txtUserName" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="txtEmail">Email</label>
                            <input name="txtEmail" type="text" placeholder="Enter Email" class="form-control" id="txtEmail" />
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="txtPhone">Phone</label>
                            <input name="txtPhone" type="text" placeholder="Enter Phone" class="form-control" id="txtPhone" />
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="txtAddress">Address</label>
                            <input name="txtAddress" type="text" placeholder="Enter Address" class="form-control" id="txtAddress" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <input type="file" id="customFile" name="customFile" class="form-control" />
                            <input type="text" class="form-control" id="txtCustomFile" name="txtCustomFile" readonly="readonly" value=""/><br />

                        </div>
                    </div>
                  </div>
                <div class="row text-center">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <img src="/CustomUploads/user/noimage.png" id="img" class="img-rounded" height="200px" width="200px">
                        </div>
                    </div>
                  </div>
            </div>
            <div class="card-footer">
                <div class="row">
                </div>
                <div class="row">
                    <div class="col-lg-12" style="text-align: right">
                        <button id="btnAdd" class="btn btn-warning btn-sm">Add&nbsp;&nbsp;<i class="fa fa-plus"></i></button>
                        <button id="btnSave" class="btn btn-success btn-sm">Save&nbsp;&nbsp;<i class="fa fa-check"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include jQuery library -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/js/datagrid/datatables/datatables.bundle.js" asp-append-version=true></script>
<script src="/ProjectJs/BizUser/Index.js" asp-append-version=true></script>

